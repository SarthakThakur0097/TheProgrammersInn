@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card card-signin flex-row my-5">
                <div class="card-img-left d-none d-md-flex">
                    <!-- Background image for card set in CSS! -->
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">Register</h5>
                    <form form asp-controller="account" asp-action="register" method="post" class="form-signin">
                        <div asp-validation-summary="All"></div>
                        <div class="form-label-group">
                            <input asp-for="FirstName" type="text" id="inputFirstName" class="form-control" placeholder="First Name" required autofocus>
                            <label asp-for="FirstName" for="inputFirstName">First Name</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-label-group">
                            <input asp-for="LastName" type="text" id="inputLastName" class="form-control" placeholder="Last Name" required autofocus>
                            <label asp-for="LastName" for="inputLastName">Last Name</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-label-group">
                            <input asp-for="UserName" type="text" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
                            <label asp-for="UserName" for="inputUsername">Username</label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-label-group">
                            <input asp-for="Email" type="email" id="inputEmail" class="form-control" placeholder="Email address" required>
                            <label asp-for="Email" for="inputEmail">Email address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <hr>

                        <div class="form-label-group">
                            <input asp-for="Password" type="password" id="inputPassword" class="form-control" placeholder="Password" required>
                            <label asp-for="Password" for="inputPassword">Password</label>
                        </div>

                        <div class="form-label-group">
                            <input asp-for="ConfirmPassword" type="password" id="inputConfirmPassword" class="form-control" placeholder="Password" required>
                            <label asp-for="ConfirmPassword" for="inputConfirmPassword">Confirm password</label>
                        </div>

                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Register</button>
                        <a class="d-block text-center mt-2 small" href="#">Sign In</a>
                        <hr class="my-4">
                        <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign up with Google</button>
                        <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign up with Facebook</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="~/css/registration.css" />

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.slim.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />


