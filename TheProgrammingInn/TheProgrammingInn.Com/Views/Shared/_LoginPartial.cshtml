@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul>
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="" title="Manage"> Hello</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="" asp-route-returnUrl="">
            <button type="submit" class="nav-link btn btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
</ul>